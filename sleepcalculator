<body>
  <div class="bg-gradient" aria-hidden="true"></div>

  <main role="main">
    <div class="container">
      <div class="card">
        <!-- Mode Toggle -->
        <div class="mode-toggle">
          <button class="mode-btn active" id="sleepModeBtn" onclick="switchMode('sleep')">
            üò¥ I need to wake up at...
          </button>
          <button class="mode-btn" id="wakeModeBtn" onclick="switchMode('wake')">
            üõèÔ∏è I'm going to bed now
          </button>
        </div>

        <!-- Sleep Mode (Calculate bedtimes) -->
        <div id="sleepMode">
          <div class="input-section">
            <label class="input-label" for="wakeTime">What time do you need to wake up?</label>
            <input type="time" id="wakeTime" class="time-input" value="07:00">
          </div>

          <button class="calculate-btn" onclick="calculateBedtimes()">
            Calculate Sleep Times ‚ú®
          </button>

          <div class="results" id="sleepResults">
            <div class="result-title">üåô You should go to bed at:</div>
            <div class="result-subtitle">Times based on 90-minute sleep cycles + 14 min to fall asleep</div>
            <div class="time-options" id="bedtimeOptions"></div>
          </div>
        </div>

        <!-- Wake Mode (Calculate wake times) -->
        <div id="wakeMode" style="display: none;">
          <div class="input-section">
            <label class="input-label" for="sleepTime">What time are you going to bed?</label>
            <input type="time" id="sleepTime" class="time-input" value="23:00">
          </div>

          <button class="calculate-btn" onclick="calculateWakeTimes()">
            Calculate Wake Times ‚ú®
          </button>

          <div class="results" id="wakeResults">
            <div class="result-title">‚òÄÔ∏è You should wake up at:</div>
            <div class="result-subtitle">Times based on 90-minute sleep cycles + 14 min to fall asleep</div>
            <div class="time-options" id="waketimeOptions"></div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
          <button class="quick-btn" onclick="setCurrentTime()">
            üïê Use Current Time
          </button>
          <button class="quick-btn" onclick="copyTime()">
            üìã Copy Best Time
          </button>
        </div>

        <!-- Settings -->
        <div class="settings-section">
          <div class="setting-row">
            <span class="setting-label">Fall asleep time (minutes):</span>
            <input type="number" class="setting-input" id="fallAsleepTime" value="14" min="0" max="60">
          </div>
        </div>

        <!-- Info Box -->
        <div class="info-box">
          <div class="info-title"><span class="emoji">üí°</span>Sleep Cycle Info</div>
          <div class="info-text">
            Sleep happens in 90-minute cycles. Waking up at the end of a cycle (not in the middle) helps you feel more refreshed. 
            Most adults need 5-6 cycles (7.5-9 hours) per night.
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    let currentMode = 'sleep';
    let fallAsleepMinutes = 14;
    let bestTimeCalculated = '';

    // Update fall asleep time when changed
    document.getElementById('fallAsleepTime').addEventListener('change', function(e) {
      fallAsleepMinutes = parseInt(e.target.value) || 14;
      if (currentMode === 'sleep') {
        calculateBedtimes();
      } else {
        calculateWakeTimes();
      }
    });

    function switchMode(mode) {
      currentMode = mode;
      
      if (mode === 'sleep') {
        document.getElementById('sleepMode').style.display = 'block';
        document.getElementById('wakeMode').style.display = 'none';
        document.getElementById('sleepModeBtn').classList.add('active');
        document.getElementById('wakeModeBtn').classList.remove('active');
      } else {
        document.getElementById('sleepMode').style.display = 'none';
        document.getElementById('wakeMode').style.display = 'block';
        document.getElementById('sleepModeBtn').classList.remove('active');
        document.getElementById('wakeModeBtn').classList.add('active');
      }
    }

    function calculateBedtimes() {
      const wakeTimeInput = document.getElementById('wakeTime').value;
      if (!wakeTimeInput) return;

      const [hours, minutes] = wakeTimeInput.split(':').map(Number);
      const wakeTime = new Date();
      wakeTime.setHours(hours, minutes, 0, 0);

      const results = [];
      const sleepCycleDuration = 90; // minutes
      
      // Calculate for 4, 5, 6, 7, and 8 cycles (recommended range)
      for (let cycles = 4; cycles <= 8; cycles++) {
        const totalMinutes = (cycles * sleepCycleDuration) + fallAsleepMinutes;
        const bedtime = new Date(wakeTime.getTime() - totalMinutes * 60000);
        
        const totalHours = totalMinutes / 60;
        
        results.push({
          time: formatTime(bedtime),
          cycles: cycles,
          hours: totalHours.toFixed(1),
          isBest: cycles === 5 || cycles === 6 // 5-6 cycles is optimal
        });
      }

      displayResults(results, 'bedtimeOptions', 'sleepResults');
      
      // Set best time for copying
      const bestResult = results.find(r => r.isBest);
      if (bestResult) {
        bestTimeCalculated = bestResult.time;
      }
    }

    function calculateWakeTimes() {
      const sleepTimeInput = document.getElementById('sleepTime').value;
      if (!sleepTimeInput) return;

      const [hours, minutes] = sleepTimeInput.split(':').map(Number);
      const sleepTime = new Date();
      sleepTime.setHours(hours, minutes, 0, 0);

      const results = [];
      const sleepCycleDuration = 90; // minutes
      
      // Calculate for 4, 5, 6, 7, and 8 cycles
      for (let cycles = 4; cycles <= 8; cycles++) {
        const totalMinutes = (cycles * sleepCycleDuration) + fallAsleepMinutes;
        const wakeTime = new Date(sleepTime.getTime() + totalMinutes * 60000);
        
        const totalHours = totalMinutes / 60;
        
        results.push({
          time: formatTime(wakeTime),
          cycles: cycles,
          hours: totalHours.toFixed(1),
          isBest: cycles === 5 || cycles === 6
        });
      }

      displayResults(results, 'waketimeOptions', 'wakeResults');
      
      // Set best time for copying
      const bestResult = results.find(r => r.isBest);
      if (bestResult) {
        bestTimeCalculated = bestResult.time;
      }
    }

    function displayResults(results, containerId, resultsId) {
      const container = document.getElementById(containerId);
      const resultsDiv = document.getElementById(resultsId);
      
      container.innerHTML = results.map(result => `
        <div class="time-option ${result.isBest ? 'best' : ''}" onclick="selectTime('${result.time}')">
          <div class="time-info">
            <div>
              <span class="time-value">${result.time}</span>
              ${result.isBest ? '<span class="badge">BEST</span>' : ''}
            </div>
            <span class="time-cycles">${result.cycles} sleep cycles</span>
          </div>
          <div>
            <span class="time-hours">${result.hours}h</span>
          </div>
        </div>
      `).join('');
      
      resultsDiv.classList.add('show');
    }

    function formatTime(date) {
      let hours = date.getHours();
      const minutes = date.getMinutes();
      const ampm = hours >= 12 ? 'PM' : 'AM';
      hours = hours % 12;
      hours = hours ? hours : 12;
      const minutesStr = minutes < 10 ? '0' + minutes : minutes;
      return `${hours}:${minutesStr} ${ampm}`;
    }

    function setCurrentTime() {
      const now = new Date();
      const hours = now.getHours().toString().padStart(2, '0');
      const minutes = now.getMinutes().toString().padStart(2, '0');
      const timeStr = `${hours}:${minutes}`;
      
      if (currentMode === 'sleep') {
        document.getElementById('wakeTime').value = timeStr;
        calculateBedtimes();
      } else {
        document.getElementById('sleepTime').value = timeStr;
        calculateWakeTimes();
      }
    }

    function selectTime(time) {
      bestTimeCalculated = time;
      
      // Visual feedback
      const message = `Selected: ${time}`;
      showToast(message);
    }

    function copyTime() {
      if (!bestTimeCalculated) {
        showToast('Calculate times first!');
        return;
      }
      
      // Copy to clipboard
      navigator.clipboard.writeText(bestTimeCalculated).then(() => {
        showToast(`Copied: ${bestTimeCalculated} ‚úÖ`);
      }).catch(() => {
        showToast('Copy failed - try selecting manually');
      });
    }

    function showToast(message) {
      // Create toast element
      const toast = document.createElement('div');
      toast.style.cssText = `
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--accent-success);
        color: white;
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        z-index: 10000;
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.35);
        animation: slideDown 0.3s ease;
      `;
      toast.textContent = message;
      
      document.body.appendChild(toast);
      
      setTimeout(() => {
        toast.style.animation = 'slideUp 0.3s ease';
        setTimeout(() => toast.remove(), 300);
      }, 2000);
    }

    // Add animations
    const style = document.createElement('style');
    style.textContent = `
      @keyframes slideDown {
        from { transform: translateX(-50%) translateY(-100%); opacity: 0; }
        to { transform: translateX(-50%) translateY(0); opacity: 1; }
      }
      @keyframes slideUp {
        from { transform: translateX(-50%) translateY(0); opacity: 1; }
        to { transform: translateX(-50%) translateY(-100%); opacity: 0; }
      }
    `;
    document.head.appendChild(style);

    // Initialize with default calculation
    window.addEventListener('load', function() {
      calculateBedtimes();
    });
  </script>
</body>
</html>
